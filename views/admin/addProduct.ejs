<%- include('layout/header.ejs') %>

        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <form>
                                    <div>
                                        <button class="btn btn-md rounded font-sm hover-up" type="submit">Save</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <form>
                                        <div class="mb-4">
                                            <label for="productname" class="form-label">Product Name</label>
                                            <input type="text" placeholder="Type here" class="form-control" id="productname" name="productname">
                                        </div>
                                        <div class="row gx-3">
                                            <div class="col-md-4  mb-3">
                                                <label for="size" class="form-label">Size</label>
                                                <input type="text" placeholder="Type here" class="form-control" id="size" name="size">
                                            </div>
                                            <div class="col-md-4  mb-3">
                                                <label for="color" class="form-label">Color</label>
                                                <input type="text" placeholder="Type here" class="form-control" id="color" name="color">
                                            </div>
                                            <div class="col-md-4  mb-3">
                                                <label for="stock" class="form-label">Stock</label>
                                                <input type="number" placeholder="Type here" class="form-control" id="stock" name="stock">
                                            </div>
                                        </div>
                                        <div class="mb-4">
                                            <label for="brandname" class="form-label">Brand</label>
                                            <input type="text" placeholder="Type here" class="form-control" id="brandname" name="brandname">
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div>
                                            <label class="form-label">Description</label>
                                            <textarea placeholder="Type here" class="form-control" rows="4" id="description" name="description"></textarea>
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div>
                                            <label for="img1"> Image</label>
                                            <input type="file" id="imgs" name="imgs" class="form-control"  multiple>
                                            <input type="hidden" id="cropvaluesimg1" name="cropvaluesimg1" >
                                            <input type="hidden" id="cropvaluesimg2" name="cropvaluesimg2" >
                                            <input type="hidden" id="cropvaluesimg3" name="cropvaluesimg3" >
                                            <input type="hidden" id="cropvaluesimg4" name="cropvaluesimg4" >
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                            </div>
                            <div class="col-lg-3">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="mb-4">
                                            <label class="form-label">Price</label>
                                            <input type="number" placeholder="Type here" class="form-control" id="price" name="price">
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label" for="procategory"> Category </label>
                                            <input class="form-control" type="text" value="" id="procategory">                                            
                                        </div>
                                    </div>
                                </div> <!-- card end// -->
                            </div>
                        </form>
            </div>
        </section>
        
<%- include('layout/footer.ejs') %>


