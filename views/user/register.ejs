<%- include('layout/header.ejs') %>

<script>
    if(window.history.replaceState)
    {
      window.history.replaceState(null,null,window.location.href)
    }
  </script>


        <div class="breadcrumb-area section-padding-1 bg-gray breadcrumb-ptb-1">
            <div class="container-fluid">
                <div class="breadcrumb-content text-center">
                    <div class="breadcrumb-title">
                        <h2>Register</h2>
                    </div>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li><span> > </span></li>
                        <li class="active">Register </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="login-register-area pt-95 pb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="login-register-wrap register-wrap">
                            <h3> <i class="fa fa-user-o"></i> Register</h3>
                            <div class="login-register-form">
                                <form id="registerForm" action="/register" method="post">

                                    <% if(locals.err) { %> 
                                        <div class="error1 alert alert-danger w-75"><%= locals.err  %></div>
                                        <% } %>

                                    <div class="sin-login-register">
                                        <label>First Name</label>
                                        <input type="text" name="fname" id="fname">
                                        <p class="error mb-2" id="fnameerror" style="display: none;"></p>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>Last Name</label>
                                        <input type="text" name="lname" id="lname">
                                        <p class="error mb-2" id="lnameerror" style="display: none;"></p>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>Email</label>
                                        <input type="email" name="email" id="email">
                                        <p class="error mb-2" id="emailerror" style="display: none;"></p>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>Mobile</label>
                                        <input type="number" name="mobile" id="mobile">
                                        <p class="error mb-2" id="moberror" style="display: none;"></p>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>Password </label>
                                        <input type="password" name="password" id="password">
                                        <p class="error mb-2" id="passerror" style="display: none;"></p>
                                    </div>
                                    <div class="sin-login-register">
                                        <label>Confirm Password </label>
                                        <input type="password" name="cpassword" id="cpassword">
                                        <p class="error mb-2" id="confirmpasserror" style="display: none;"></p>
                                    </div>
                                    <p>Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our <a href="#">privacy policy</a></p>
                                    <div class="login-register-btn">
                                        <button type="submit">Register</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script src="/public/js/register.js"></script>

        <%- include('layout/footer.ejs') %>